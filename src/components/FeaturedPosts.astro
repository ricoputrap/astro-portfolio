---
import type { Post } from '../types/index.types';
import Card from './Card.astro';
import PostItem from './PostItem.astro';
import Tags from './Tags.astro';

interface Props {
  mainPost: Post;
  posts: Post[];
}

const { mainPost, posts } = Astro.props;
---

<div class="featured-posts">
  <div class="main">
    <Card fitContent heightMax>
      <img src={ mainPost.cover } alt={ mainPost.title } />

      <div class="content">
        <h5 class="title">{ mainPost.title }</h5>
        <p class="date">{ mainPost.date } by <strong>{ mainPost.author }</strong></p>
        <p class="description">{ mainPost.description }</p>
        <Tags tags={ mainPost.tags } />
      </div>
    </Card>
  </div>

  <div class="posts">
    <PostItem
      title={ posts[0].title }
      date={ posts[0].date }
      author={ posts[0].author }
      description={ posts[0].description }
      tags={ posts[0].tags }
      slug={ posts[0].slug }
    />
    <PostItem
      title={ posts[1].title }
      date={ posts[1].date }
      author={ posts[1].author }
      description={ posts[1].description }
      tags={ posts[1].tags }
      slug={ posts[1].slug }
    />
  </div>
</div>

<style>
  p {
    margin: 0;
  }

  .featured-posts {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 20px;
  }

  .main {
    grid-column: 1 / span 2;
    grid-row: 1 / span 2;

    display: flex;
    flex-direction: column;
    column-gap: 20px;
  }
  .posts {
    display: flex;
    flex-direction: column;
    row-gap: 20px;

    grid-column-start: 3;
    grid-row: 1 / span 2;
  }
  .main img {
    width: 100%;
    height: 240px;
    object-fit: cover;
  }

  .secondary {
    grid-column-start: 3
    grid-row-start: 2;
  }

  .title {
    color: var(--color-text-brand);
  }
  .date {
    font-size: 14px;
    font-style: italic;
    color: var(--color-text-secondary);
    line-height: 20px;
  }
  .description {
    font-size: 14px;
    line-height: 24px;
  }
  .content {
    display: flex;
    flex-direction: column;
    row-gap: 8px;
  }

  @media screen and (max-width: 768px) {
    .featured-posts {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(4, 1fr);
    }
    .main {
      grid-column: 1;
      grid-row: 1 / span 2;
    }
    .posts {
      grid-column: 1;
      grid-row: 3 / span 2;
    }
    .secondary {
      grid-column: 1;
      grid-row: 2;
    }
  }
</style>